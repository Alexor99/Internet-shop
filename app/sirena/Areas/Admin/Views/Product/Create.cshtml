@model sirena.ViewModels.ProductCVM

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>ProductCVM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Article" class="control-label"></label>
                <input asp-for="Article" class="form-control" />
                <span asp-validation-for="Article" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cost" class="control-label"></label>
                <input asp-for="Cost" class="form-control" />
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MainPhoto" class="control-label"></label>
                @Images.UploadImage(nameof(Model.File), Model.MainPhoto)
                <span asp-validation-for="MainPhoto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsDisabled" /> @Html.DisplayNameFor(model => model.IsDisabled)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Categories" class="control-label"></label>
                <div class="form-group">
                    @Html.ListBoxFor(m => m.SelectedCategories,
                        new MultiSelectList(Model.Categories, "Value", "Text", Model.Categories.Where(x => x.Selected)),
                        new { @class = "listbox" })
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Colors" class="control-label"></label>
                <div class="form-group">
                    @Html.ListBoxFor(m => m.SelectedColors,
                            new MultiSelectList(Model.Colors, "Value", "Text", Model.Colors.Where(x => x.Selected)),
                            new { @class = "listbox", multiple = "multiple" })
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Sizes" class="control-label"></label>
                <div class="form-group">
                    @Html.ListBoxFor(m => m.SelectedSizes,
                            new MultiSelectList(Model.Sizes, "Value", "Text", Model.Sizes.Where(x => x.Selected)),
                            new { @class = "listbox", multiple = "multiple" })
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
